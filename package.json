{
  "name": "sac-custom-widget",
  "version": "1.0.0",
  "description": "SAP Analytics Cloud Custom Widget with AI-powered chatbot",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "start": "node dist/server.js",
    "watch": "tsc --watch",
    "cf-push": "cf push",
    "cf-deploy": "cf push --no-start && cf set-env sac-custom-widget NODE_ENV production && cf start sac-custom-widget"
  },
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "keywords": [
    "sac",
    "chatbot",
    "openai",
    "sap",
    "odata"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sap/xsenv": "^3.4.0",
    "@sap/xssec": "^3.6.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "openai": "^4.20.1",
    "typescript": "^5.3.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/xml2js": "^0.4.14",
    "ts-node": "^10.9.2"
  }
}
